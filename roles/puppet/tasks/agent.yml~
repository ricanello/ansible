- name: Instala o agent
  apt: 
    name: puppet-agent
    state: present
    update_cache: yes
  when: ansible_os_family == 'Debian'

- name: Instala o agent para Redhat
  yum:
    name: puppet-agent
    state: present
  when: ansible_os_family == 'RedHat'

- name: Inicia o puppet-agent
  service:
    name: puppet-agent
    state: started
    enabled: yes
